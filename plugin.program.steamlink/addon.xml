<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.steamlink" name="Steamlink Launcher" version="0.0.12" provider-name="Toast">
  <requires>
    <import addon="xbmc.python" version="2.25.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Steamlink for Kodi</summary>
    <description lang="en_GB">Steamlink for Kodi</description>
    <disclaimer lang="en_GB"></disclaimer>
    <language>en</language> <!-- the language of the videos the plugin provides, may be left blank -->
    <platform>linux</platform>
    <license>GPL-2.0</license>
    <forum></forum> <!-- may be left blank  -->
    <website>https://github.com/swetoast/steamlink-launcher/</website> <!-- the url of the website that contains the videos (or the official website of your plugin).  -->
    <email></email> <!-- may be left blank  -->
    <source>https://github.com/swetoast/steamlink-launcher</source>
    <news>
      Kodi 19.x update and additional update for OSMC
    </news>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
        <banner>resources/banner.png</banner>
        <clearlogo>resources/clearlogo.png</clearlogo>
        <screenshot>resources/screenshot.png</screenshot>
    </assets>
  </extension>
</addon>
